[user]
	name = Sam Anderson
	email = self@coarsesand.net

[alias]
	stage = add
	unstage = reset HEAD
	discard = checkout --
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	s = status
	a = add
	c = commit
	cm = commit -m
	aa = add --all
	l = log --pretty=format:\"%h | %s%d\" --graph
	submod = submodule
	sub = submodule

[core]
	editor = vim
	symlinks = false

[merge]
	tool = Kaleidoscope

[mergetool "splice"]
	cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode = true

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[diff]
	tool = Kaleidoscope

[difftool]
	prompt = false

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot

[mergetool]
	prompt = false
