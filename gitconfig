[user]
	name = csand
	email = sam@csand.net

[alias]
	a = add
	aa = add --all
	au = add -u
	c = commit
	cm = commit -m
	co = checkout
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l = log --pretty=format:\"%h | %s%d\" --graph
	slog = log --pretty=format:\"%C(green)%h %C(blue)%ad %C(yellow)[%C(magenta)%an%C(yellow)] %Creset%s\" --date=short
	remotes = remote -v
	s = status
	sub = submodule
	st = stash
	prune = remote prune origin
	index = diff --cached
	bd = branch -d

[core]
	editor = vim
	symlinks = false
	whitespace = trailing-space,space-before-tab
	trustctime = false

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[push]
	default = matching

[diff]
	tool = vimdiff

[difftool]
	prompt = false
	path = nvim

[merge]
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false
	path = nvim

[prompt]
	showinfo = true

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
