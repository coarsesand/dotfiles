[user]
	name = csand
	email = sam@csand.net

[alias]
	a = add
	aa = add --all
	au = add -u
	c = commit
	cm = commit -m
	co = checkout
	history = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	l = log --pretty=format:\"%h | %s%d\" --graph
	remotes = remote -v
	s = status
	sub = submodule
	st = stash

[core]
	editor = vim
	symlinks = false
	whitespace = trailing-space,space-before-tab
	trustctime = false

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[push]
	default = matching

[merge]
	conflictstyle = diff3
	tool = Kaleidoscope

[mergetool]
	prompt = false

[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true

[diff]
	tool = Kaleidoscope

[difftool]
	prompt = false

[difftool "mvimdiff"]
	cmd = mvim -f -d \"$LOCAL\" \"$REMOTE\"

[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[prompt]
	showinfo = true
