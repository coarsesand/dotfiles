# Oh god do I ever hate that little arrow.
style "panel-arrow-remove" {
	engine "pixmap" {
		image {
			function = ARROW
			recolorable = TRUE
			overlay_file = ".arrow-blank.png"
			overlay_border = {2,2,2,2}
			overlay_stretch = FALSE
			arrow_direction = UP
		}

		image {
			function = ARROW
			recolorable = TRUE
			overlay_file = ".arrow-blank.png"
			overlay_border = {2,2,2,2}
			overlay_stretch = FALSE
			arrow_direction = DOWN
		}
	}
}
widget_class "*PanelToplevel*" 			style "panel-arrow-remove"

# Change to whatever your GVIM background colour is
style "vimfix" {
	bg[NORMAL] = "#202020"
}
widget "vim-main-window.*GtkForm" style "vimfix"

# You know what I hate more than the arrow? GTK 3's resize grips
style "no-grip-style"
{
	GtkWindow::resize-grip-height = 0
	GtkWindow::resize-grip-width = 0
}
class "GtkWidget" style "no-grip-style"
