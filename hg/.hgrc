[ui]
editor = vim
username = Sam Anderson <self@coarsesand.net>

[alias]
show = log --color=always -pr
s = status
a = add

[color]
status.modified = cyan
status.added = green
status.removed = magenta
status.deleted = red bold
status.unknown = green bold
status.ignored = black

[diff]
git = true

[merge-tools]
splice.executable = vim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1

[extensions]
color =
bookmarks =
fetch =
graphlog =
mq =
progress =
record =
shelve =
prompt = $HOME/.mercurial/extensions/hg-prompt/prompt.py
hggit = $HOME/.mercurial/extensions/hg-git/hggit

